{% extends 'AppBundle:user:control_panel.html.twig' %}

{% block title %}Customers{% endblock title %}

{% block content %}

<div class="container">
  <div class="row">
    <div class="col s12 m12 ">
      <div class="card">

        <div class="card-tabs">
          <ul class="tabs tabs-fixed-width">
            <li class="tab"><a class="active" href="#add_customer">Add a Customer or Funder</a></li>

            <li class="tab"><a href="#funders">Funders</a></li>

            <li class="tab"><a href="#customers">Customers</a></li>
          </ul>
        </div>


        <div class="card-content">

          <div id="add_customer">

            {% include 'AppBundle:user/form:add_customer.html.twig' %}
          </div>

          <div id="funders">
            <p class="light">
              This shows you a table of your funders. In Rosemary, a funder is someone you receive money from for a non-commercial service ie a charitable grant.
            </p>

            <table>
              <thead>
                <tr>
                  <th data-field="customer_name">
                    Funder Name
                  </th>
                </tr>
              </thead>

              <tbody>
                {% for c in customers %}

                  {% if c.funder %}
                    <tr>



                    <td>
                      {{c.name}}
                    </td>



                  </tr>
                  {% endif %}
                {% endfor %}
              </tbody>

            </table>
          </div>

          <div id="customers">
            <p class="light">
                This shows you a table of your funders. In Rosemary, a customer is someone you receive money from for a commercial service ie renting out a space or selling a product
            </p>

            <table>
              <thead>
                <tr>
                  <th data-field="customer_name">
                    Customer Name
                  </th>
                </tr>
              </thead>

              <tbody>
                {% for c in customers %}

                  {% if not c.funder %}
                    <tr>



                    <td>
                      {{c.name}}
                    </td>



                  </tr>
                  {% endif %}
                {% endfor %}
              </tbody>

            </table>
          </div>

        </div>
      </div>
    </div>

  </div>


</div>

{% endblock content %}
