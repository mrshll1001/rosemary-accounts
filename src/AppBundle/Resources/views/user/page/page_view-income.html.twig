{% extends 'AppBundle:user:control_panel.html.twig' %}

{% block title %}Income{% endblock title %}

{% block content %}

  <div class="container">
    <h1 class="light">Income</h1>
    <div class="row">
      <div class="col s12">

        <div class="card">
          <div class="card-tabs">
            <ul class="tabs tabs-fixed-width">
              <li class="tab"><a class="active" href="#add_income">Add Income</a></li>
              <li class="tab"><a href="#total_by_source">Total by Source</a></li>
              <li class="tab"><a href="#all_income">All Income</a></li>
            </ul>
          </div>

          <div class="card-content">
            <div id="add_income">
              {% include 'AppBundle:user/form:add_income.html.twig' %}
            </div>

            <div id="total_by_source">
              {% include 'AppBundle:user/component/table:total_income_by_sources.html.twig' %}
            </div>

            <div id="all_income">
              <p>
                Total Income: {{total|fintotal}}
              </p>
              {% include 'AppBundle:user/component/table:all_income.html.twig' %}

            </div>
          </div>
        </div>

  </div>
</div>
</div>
{% endblock %}

{% block script %}
  <script type="text/javascript" src="{{asset('js/income-tags.js')}}">
  </script>
{% endblock script %}
