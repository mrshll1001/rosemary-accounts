{% extends 'AppBundle:user:control_panel.html.twig' %}

{% block title %}View Expenses{% endblock title %}

{% block content %}


<div class="container">
  <div class="row">
    <h1 class="light">Expenses</h1>
  </div>


  <div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-tabs">
          <ul class="tabs tabs-fixed-width">
            <li class="tab"><a class="active" href="#add_expense">Add Expense</a></li>
            <li class="tab"><a href="#all_expenses">All Expenses</a></li>
          </ul>
        </div>

        <div class="card-content">
          <div id="add_expense">
            {% include 'AppBundle:user/form:add_expense.html.twig'  %}

          </div>

          <div id="all_expenses">
            <p class="light">
              Total {{total|fintotal}}
            </p>
            {% include 'AppBundle:user/component/table:all_expenses.html.twig' %}
          </div>


        </div>
      </div>
    </div>
  </div>

</div>
{% endblock content %}

{% block script %}
<script type="text/javascript" src="{{asset('js/expense-tags.js')}}"></script>

{% endblock script %}
