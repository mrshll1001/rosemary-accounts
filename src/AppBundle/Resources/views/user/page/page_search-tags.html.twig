{% extends 'AppBundle:user:control_panel.html.twig' %}

{% block title %}Search tags{% endblock %}

{% block content %}
  <h1 class="light">Search: {{searchTerm}} ({{posts|length}} results)</h1>

  <div class="container">
    <div class="row">
      <div class="col s12 m12">
        <form>
            <div class="chips chips-initial">

            </div>

            <button type="submit" name="button" class="btn">Search</button>
        </form>
      </div>
    </div>
  </div>

{% endblock %}

{% block script %}
<script type="text/javascript">
    $('.chips').material_chip();

    data = [{tag: "{{searchTerm}}"}];

    $('.chips-initial').material_chip({
    data: data,
  });

