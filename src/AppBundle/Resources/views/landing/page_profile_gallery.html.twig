{% extends 'AppBundle::base.html.twig' %}

{% block title %}{{organisation.organisationName}}'s Images{% endblock %}

{% block body %}
  {% include 'AppBundle:landing:navbar.html.twig' %}

  {# Profile Info #}
  {% include 'AppBundle:profile:profile_header.html.twig'  %}


  <div class="container">
    <div class="row">
      <h1 class="light">Gallery</h1>
    </div>

    <div class="row">
      <div class="col s12">
        <div class="card">
          <ul class="tabs">
            <li class="tab"><a href="#posts_full">Posts with Images</a></li>
            <li class="tab"><a href="#posts_images">Just Images</a></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="row">
      <div id="posts_full">
        <p>
          {% for post in posts %}
            <div class="col s12 m6">
              {% include 'AppBundle:profile:card_compound_profile.html.twig'  %}
            </div>
          {% endfor %}
        </p>
      </div>

      <div id="posts_images">
        {% for post in posts %}
            <div class="col s12 m6">
              <img class="gallerythumb materialboxed" data-caption="{{post.description}}" src="{{post.mediaURI}}"/>
            </div>
        {% endfor %}
      </div>

    </div>

  </div>

{% endblock body %}

{% block script %}
<script type="text/javascript">

  $(document).ready(function(){
      $('.carousel').carousel();
    });


</script>
{% endblock script %}
